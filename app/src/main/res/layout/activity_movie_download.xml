<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MovieDownloadActivity">
    <ImageView
            android:id="@+id/imgMovie"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/simpsons_movie"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="fitXY"/>
    <TextView
            android:id="@+id/tvTitleMovie"
            android:text="Els Simpson: la pel·lícula"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/imgMovie"
            android:layout_marginTop="10dp"/>
    <Button
            android:text="Comentar"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnComment"
            android:background="@drawable/button_bg_rounded_corners"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/tvTitleMovie"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginTop="20dp"
            android:onClick="handleComentar"/>
    <Button
            android:text="Download"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnComment2"
            android:background="@drawable/button_bg_rounded_corners"
            android:textColor="#FFFFFF"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintEnd_toStartOf="@+id/btnComment"
            app:layout_constraintBottom_toBottomOf="@+id/btnComment"
            android:layout_marginEnd="20dp"
            android:onClick="handleDownload"/>
    <TextView
            android:text="La combinació de Homer, el seu nou porc mascota, i una sitja ple d'excrement podrien provocar un desastre que amenaci no només a Springfield, sinó a tot el món. Una munió enutjada arriba a la casa dels Simpson i divideix la família. Amb el destí de la Terra en joc, Homer es prepara per intentar redimir-se amb la intenció de salvar el món i guanyar-se el perdó de Marge."
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/tvTitleMovie"
            app:layout_constraintEnd_toEndOf="@+id/tvTitleMovie"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/etQualitat"
            android:layout_marginTop="10dp"
            android:textSize="13sp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="David Silverman"
            android:ems="10"
            android:id="@+id/etPersonName"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleMovie"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"/>
    <TextView
            android:text="Director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/etPersonName"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/tvTitleMovie"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Català"
            android:ems="10"
            android:id="@+id/etQualitat"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/etPersonName"
            app:layout_constraintStart_toStartOf="@+id/etPersonName"/>
    <TextView
            android:text="Qualitat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/etPersonName"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/tvTitleMovie"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/btnStar"
            android:src="@android:drawable/star_big_off"
            android:tint="#000000"
            app:layout_constraintBottom_toTopOf="@+id/tvTitleMovie"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:fabSize="normal"
            app:fabCustomSize="30dp"
            app:maxImageSize="20dp"
            android:onClick="handleStar"/>
</androidx.constraintlayout.widget.ConstraintLayout>